<div>
    <p>Error: {message}</p>
</div>

<div className={classes.container}>
    <h1 className={classes.title}>Shipping Details</h1>
    <p className={classes.subtitle}>
        Please enter your shipping details below
    </p>
    <form className={classes.container}>
        {/* {cancelButtonAvailable && (
        <button type="button" onClick={cancelClickHandler} className={classes.editButton}>
            Cancel
        </button>
        )} */}
        <div className={classes.nameContainer}>
            <InputField type={"text"} label={"First Name"} name={"firstName"} error={errors.firstName}
                placeholder="Jane" onChange={(event)=> handleInputChange(event)}
                className={classes.nameInput}
                value={formData.firstName}
                />
                <InputField type={"text"} label={"Last Name"} error={errors.lastName} name={"lastName"}
                    placeholder="Doe" onChange={(event)=> handleInputChange(event)}
                    className={classes.nameInput}
                    value={formData.lastName}
                    />
        </div>
        <InputField placeholder="Enter your address" error={errors.address} onChange={(event)=>
            handleInputChange(event)}
            label="Address"
            type="text"
            name="address"
            value={formData.address}
            />
            <div className={classes.nameContainer}>
                <InputField type={"text"} label={"Floor Number"} name={"floorNumber"} error={errors.floorNumber}
                    placeholder="(optional)" onChange={(event)=> handleInputChange(event)}
                    className={classes.nameInput}
                    value={formData.floorNumber}
                    />
                    <InputField type={"text"} error={errors.apartmentNumber} label={"Apartment Number"}
                        name={"apartmentNumber"} placeholder="(optional)" onChange={(event)=> handleInputChange(event)}
                        className={classes.nameInput}
                        value={formData.apartmentNumber}
                        />
            </div>
            <div className={classes.formGroup}>
                <label htmlFor="city">City</label>
                <select className={classes.input} id="city" onChange={(event)=> handleInputChange(event)}
                    name="city"
                    error={errors.city}
                    value={formData.city}
                    >
                    <option className={classes.option} value="">
                        Select a city
                    </option>
                    <option className={classes.option} value="Cairo">
                        Cairo
                    </option>
                    <option className={classes.option} value="Alexandria">
                        Alexandria
                    </option>
                </select>
            </div>

            <InputField placeholder="Enter your phone number" onChange={(event)=> handleInputChange(event)}
                label="Phone Number"
                type="text"
                name="phoneNumber"
                error={errors.phoneNumber}
                value={formData.phoneNumber}
                />
                {/* <div className={classes.buttonContainer}>
                    <StretchedButton onClick={handleSubmit} type="button" text="Save Address" loading={loading} />
                </div> */}
    </form>
    <div className={classes.container}>
        <div className={classes.orderSummaryContainer}>
            <div className={classes.orderSummaryHeader}>
                <h1 className={classes.orderSummaryHeaderTitle}>Order Summary</h1>
            </div>
            <div className={classes.orderSummaryBody}>
                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Mini Pictures</h3>
                    <p className={classes.subHeaderPrice}>
                        {numOfMini} x {35} EGP
                    </p>
                </div>
                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Wide Pictures</h3>
                    <p className={classes.subHeaderPrice}>
                        {numOfWide} x {40} EGP
                    </p>
                </div>
                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Total Pictures</h3>
                    <p className={classes.subHeaderPrice}>{totalNumOfFrames}</p>
                </div>
            </div>

            <div className={classes.orderSummaryBody}>
                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Subtotal</h3>
                    <p className={classes.subHeaderPrice}>{totalPrice} EGP</p>
                </div>
                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Shipping</h3>
                    <p className={classes.subHeaderPrice}>{shippingPrice} EGP</p>
                </div>

                <div className={classes.subHeader}>
                    <h3 className={classes.subHeaderTitle}>Total</h3>
                    <p className={classes.subHeaderPrice}>
                        {totalPrice + shippingPrice} EGP
                    </p>
                </div>
            </div>
        </div>
        <div className={classes.checkoutButtonContainer}>
            <button type={type} onClick={onClick} className={`${classes.container} ${className}`}>
                {!loading ? (
                <span className={classes.text}>{children ? children : text}</span>
                ) : (
                <LoadingSpinner />
                )}
            </button>
        </div>
    </div>
</div>
